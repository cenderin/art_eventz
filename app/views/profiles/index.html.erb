<h1>Member Profiles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name </th>
      <th>Tagline </th>
      <th>Website </th>
      <th>Facebook </th>
      <th>Twitter </th>
      <th>Bio</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
    <tr>
      <td><%= profile.name %></td>
      <td><%= profile.tagline %></td>
      <td><%= profile.website1 %></td>
      <td><%= profile.facebook %></td>
      <td><%= profile.twitter %></td>
      <td><%= truncate(profile.bio, length: 100) %></td>
      <td><%= link_to 'Show', profile_path(profile.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>