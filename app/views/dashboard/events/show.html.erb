<p id="notice"><%= notice %></p>
<div class="event_show_page">
  <div class="col-md-5 pull-left event_show">
    <h3><%= @event.title %></h3>
    <p>
    <em><%= @event.tagline %></em>
    </p>
    <p>
    <strong>Date:</strong>
    <%= @event.date %>
    </p>
    <p>
    <strong>Time:</strong>
    <%= @event.time %>
    </p>
    <div class="small_font address">
      <p>
      <%= @event.address %> <%= @event.address2 %>
      </p>
      <p>
      <%= @event.city %>, <%= @event.state %> <%= @event.zip %>
      </p>
    </div>
    <br>
    <p>
    Contact Name:
    <strong><%= @event.contact_name %></strong>
    </p>
    <p>
    Contact Email:
    <strong><%= @event.contact_email %></strong>
    </p>
    <br>
    <div class="small_font">
      <p>
      <%= @event.more_info %>
      </p>
    </div>
  </div>
  <br>
  <br>
  <div class="pull-left">
    <div class="bigger_box">
      <div class="green_box">
      </div>
    </div>
    <p>
    Website:
    <%= @event.website %>
    </p>
    <p>
    Facebook:
    <%= @event.facebook %>
    </p>
    <p>
    Application:
    <%= @event.application_form %>
    </p>
    <p>Event Photos:</p>
    <%= form_for([:dashboard, @event, @event_photo]) do |f| %>
    <%= f.file_field :photo %>
    <%= f.hidden_field(:event_id, value: @event.id) %>
    <%= f.submit('Upload Image', class: 'btn btn-primary') %>
    <% end %>
    <h5>
    <%= link_to 'Edit', edit_dashboard_event_path(@event) %> |
    <%= link_to 'Back', dashboard_events_path %></h5>
  </div>
